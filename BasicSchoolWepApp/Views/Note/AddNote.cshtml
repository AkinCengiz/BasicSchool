@model BasicSchoolWepApp.Models.EntityFramework.tbl_Notlar
@{
    ViewBag.Title = "AddNote";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="text-info pb-5">Not Ekleme Paneli</h2>
<br />
<form class="form-group" method="post">
    <div class="form-group">
        <label>Öğrenci</label>
        @Html.DropDownListFor(s => s.tbl_Ogrenciler.OgrID,(List<SelectListItem>)ViewBag.listOfStudent, new {@class="form-control"})
    </div>
    <div class="form-group">
        <label>Ders</label>
        @Html.DropDownListFor(l => l.tbl_Dersler.DersId,(List<SelectListItem>)ViewBag.listOfLesson,new {@class="form-control"})
    </div>
    <div class="form-group">
        <label>Sınav 1</label>
        <input type="number" min="0" max="100" class="form-control" name="Sinav1" />
    </div>
    <div class="form-group">
        <label>Sınav 2</label>
        <input type="number" min="0" max="100" class="form-control" name="Sinav2" />
    </div>
    <div class="form-group">
        <label>Sınav 3</label>
        <input type="number" min="0" max="100" class="form-control" name="Sinav3" />
    </div>
    <div class="form-group">
        <label>Proje</label>
        <input type="number" min="0" max="100" class="form-control" name="Proje" />
    </div>
    @*<div class="form-group">
        <label>Ortalama</label>
        <input type="text" class="form-control" name="Ortalama" disabled="disabled"/>
    </div>
    <div class="form-group">
        <label>Durum</label>
        @Html.DropDownList("Durum",new[]{new SelectListItem(){Value = "0",Text = "Kaldı"},new SelectListItem(){Value = "1",Text = "Geçti"}},"Seçiniz...",new {@class="form-control"})
    </div>*@
    <div class="form-group">
        <button class="btn btn-primary">Öğrenci Ekle</button>
    </div>
</form>
